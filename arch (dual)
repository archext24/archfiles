# arch linux (2403) / windows (10) (ventoy)

loadkeys fr
setfont ter-v24b

cfdisk /dev/sda5
mount /dev/sda5 /mnt
mkdir /mnt/data
mount /dev/sdb1 /mnt/data

fallocate -l 4G /mnt/swapfile
chmod 600 /mnt/swapfile
mkswap /mnt/swapfile
swapon /mnt/swapfile
free -h

ip link
iwctl 
device list
station wlan0 scan
station wlan0 get-networks
station wlan0 connect <SSID>
station wlan0 show
ip a

nano /var/lib/iwd/<SSID>.psk
    | [Settings]
    | Hidden=true

pacstrap /mnt base base-devel linux linux-firmware nano man-db man-pages
genfstab -U /mnt >> /mnt/etc/fstab
cat /mnt/etc/fstab

nano /etc/locale.gen
ar_MA.UTF-8
en_US.UTF-8
locale-gen

nano /etc/locale.conf
LANG=en_US.UTF-8

nano /etc/vconsole.conf
KEYMAP=fr

pacman -S networkmanager iwd
systemctl enable NetworkManager

nano /etc/hostname
home

nano /etc/hosts
127.0.0.1  localhost
::1        localhost
127.0.1.1  home.localdomain  home

useradd -mG wheel abdul
passwd abdul
EDITOR=nano visudo
wheel ALL(=ALL) (ALL)

pacman -S grub efibootmgr os-prober ntfs-3g mtools dosfstools
mkdir /boot/efi
mount /dev/sda1 /boot/efi
grub-install --target=x86_64-efi --bootloader-id=grub_uefi --recheck
ls /boot/efi/EFI
grub-mkconfig -o /boot/grub/grub.cfg

exit
