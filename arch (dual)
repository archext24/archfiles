# arch linux (2403) / windows (10) (ventoy)

loadkeys fr
setfont ter-v24b

cfdisk /dev/sda5
mount /dev/sda5 /mnt
mkdir /mnt/data
mount /dev/sdb1 /mnt/data

fallocate -l 4G /mnt/swapfile
chmod 600 /mnt/swapfile
mkswap /mnt/swapfile
swapon /mnt/swapfile
free -h

ip link
iwctl 
device list
station wlan0 scan
station wlan0 get-networks
station wlan0 connect <SSID>
station wlan0 show
ip a

nano /var/lib/iwd/<SSID>.psk
    | [Settings]
    | Hidden=true

pacstrap /mnt base base-devel linux linux-firmware nano intel-code terminus-font
genfstab -U /mnt >> /mnt/etc/fstab
cat /mnt/etc/fstab

nano /etc/locale.gen
ar_MA.UTF-8
en_US.UTF-8
locale-gen

pacman -S networkmanager iwd reflector
systemctl enable NetworkManager

nano /etc/pacman.conf
Color
VerbosePkgLists
ParallelDownloads=5
ILoveCandy

pacman-key --init
pacman-key --populate
reflector -c France -a 9 -p https --sort rate --save /etc/pacman.d/mirrorlist
cat /etc/pacman.d/mirrorlist

nano /etc/hostname
home

nano /etc/hosts
127.0.0.1  localhost
::1        localhost
127.0.1.1  home.localdomain  home

useradd -mG wheel abdul
passwd abdul

EDITOR=nano visudo
wheel ALL(=ALL) (ALL)

pacman -S grub efibootmgr os-prober ntfs-3g mtools dosfstools
mkdir /boot/efi
mount /dev/sda1 /boot/efi
grub-install --target=x86_64-efi --bootloader-id=GRUB --recheck
ls /boot/efi/EFI

nano /etc/default/grub
GRUB_DISABLE_OS_PROBER="false"

grub-mkconfig -o /boot/grub/grub.cfg

exit
swapoff /mnt/swapfile
umount -R /mnt
reboot
